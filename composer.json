{
    "name": "toporia/framework",
    "description": "Toporia Framework - A modern PHP framework with Clean Architecture",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Phungtruong7820",
            "email": "minhphung485@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "psr/container": "^2.0"
    },
    "suggest": {
        "ext-redis": "Required for Redis cache/session/queue drivers",
        "ext-pdo_mysql": "Required for MySQL database support",
        "ext-pdo_pgsql": "Required for PostgreSQL database support",
        "ext-pdo_sqlite": "Required for SQLite database support",
        "ext-pcntl": "Required for multi-process execution (Linux/macOS)",
        "phpmailer/phpmailer": "Required for email functionality",
        "aws/aws-sdk-php": "Required for AWS S3 storage",
        "php-amqplib/php-amqplib": "Required for RabbitMQ queue/broker",
        "elasticsearch/elasticsearch": "Required for Elasticsearch search",
        "phpoffice/phpspreadsheet": "Required for Excel import/export",
        "openspout/openspout": "High-performance Excel streaming"
    },
    "autoload": {
        "psr-4": {
            "Toporia\\Framework\\": "src/"
        },
        "files": [
            "src/Support/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Toporia\\Framework\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "extra": {
        "branch-alias": {
            "dev-main": "1.x-dev"
        }
    }
}
